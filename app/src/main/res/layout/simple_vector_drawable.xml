<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.climbachiya.glikeanimation.MainActivity"
    android:gravity="center">

    <ImageView
        android:id="@+id/imgRewardClone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_thumb_up_black_24dp"
        android:layout_marginLeft="25dp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imgReward"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:src="@drawable/ic_thumb_up_black_24dp"
        android:visibility="visible" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/image_heart"
        app:srcCompat="@drawable/ic_favorite_black"
        android:layout_marginRight="52dp"
        android:layout_marginEnd="52dp"
        android:layout_alignTop="@+id/imgRewardClone"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/image_animated_heart"
        app:srcCompat="@drawable/ic_favorite_blue"
        android:layout_below="@+id/imgRewardClone"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome To Animation Word"
        android:id="@+id/text_title"
        android:layout_marginTop="88dp"
        android:textSize="20sp"
        android:layout_below="@+id/image_animated_heart"
        android:layout_alignRight="@+id/image_heart"
        android:layout_alignEnd="@+id/image_heart" />

</RelativeLayout>
