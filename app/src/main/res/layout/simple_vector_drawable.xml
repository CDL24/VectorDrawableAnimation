<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.climbachiya.glikeanimation.MainActivity"
    android:gravity="center">

    <ImageView
        android:id="@+id/imgRewardClone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_thumb_up_black_24dp"
        android:layout_marginLeft="25dp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imgReward"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:src="@drawable/ic_thumb_up_black_24dp"
        android:visibility="visible" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/image_heart"
        app:srcCompat="@drawable/ic_favorite_black"
        android:layout_above="@+id/text_title"
        android:layout_toRightOf="@+id/image_mood_happy_1"
        android:layout_toEndOf="@+id/image_mood_happy_1"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/image_animated_heart"
        app:srcCompat="@drawable/ic_favorite_blue"
        android:layout_below="@+id/image_mood_happy_1"
        android:layout_alignLeft="@+id/image_mood_happy_1"
        android:layout_alignStart="@+id/image_mood_happy_1"
        android:layout_marginTop="84dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome To Animation Word"
        android:id="@+id/text_title"
        android:layout_marginTop="88dp"
        android:textSize="20sp"
        android:layout_below="@+id/image_animated_heart"
        android:layout_alignRight="@+id/image_heart"
        android:layout_alignEnd="@+id/image_heart" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/image_mood_happy_1"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_mood_happy"
     />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/image_mood_happy_2"
        app:srcCompat="@drawable/ic_mood_happy"
        android:layout_alignTop="@+id/image_mood_happy_1"
        android:layout_toRightOf="@+id/image_mood_happy_1"
        android:layout_toEndOf="@+id/image_mood_happy_1" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/image_spoon"
        app:srcCompat="@drawable/ic_restaurant_menu"
        android:layout_above="@+id/text_title"
        android:layout_alignRight="@+id/imgRewardClone"
        android:layout_alignEnd="@+id/imgRewardClone" />

</RelativeLayout>
